  "name": "@alaskaairux/auro-flightline",
  "version": "1.4.0",
  "description": "Auro custom auro-flightline element",
  "author": "Product design and research",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-flightline"
  },
  "main": "index.js",
  "license": "Apache-2.0",
