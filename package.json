{
  "//": [
    "================================================================================",
    "# To work within the development environment, run the following tasks",
    "  1. $ npm run dev",
    "  2. $ npm run serve",
    "  3. Go to http://localhost:3001",
    "================================================================================"
  ],
  "name": "@aurodesignsystem/auro-flightline",
  "version": "2.0.1",
  "description": "Auro custom auro-flightline element",
  "author": "Product design and research",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-flightline"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18 || ^20"
  },
  "dependencies": {
    "@aurodesignsystem/auro-badge": "^2.3.1",
    "chalk": "^5.3.0",
    "lit": "^3.1.0"
  },
  "peerDependencies": {
    "@aurodesignsystem/design-tokens": "^4.2.0",
    "@aurodesignsystem/webcorestylesheets": "^5.0.4"
  },
  "devDependencies": {
    "@alaskaairux/design-tokens": "^3.15.5",
    "@alaskaairux/icons": "^4.28.0",
    "@aurodesignsystem/design-tokens": "^4.2.0",
    "@aurodesignsystem/eslint-config": "^1.3.0",
    "@aurodesignsystem/webcorestylesheets": "^5.0.4",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.1",
    "@web/dev-server": "^0.4.1",
    "@web/test-runner": "^0.18.0",
    "autoprefixer": "^10.4.14",
    "compression": "^1.7.4",
    "concat": "^1.0.3",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "core-js": "^3.32.0",
    "eslint": "^8.55.0",
    "eslint-plugin-jsdoc": "^46.4.5",
    "eslint-plugin-lit": "^1.8.3",
    "husky": "^8.0.3",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-custom-properties": "^13.3.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-selector-replace": "^1.0.2",
    "rollup": "^4.6.1",
    "rollup-plugin-serve": "^3.0.0",
    "sass": "^1.64.2",
    "semantic-release": "^22.0.8",
    "sinon": "^17.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-scss": "^5.0.1",
    "typescript": "^5.1.6",
    "wc-sass-render": "^1.4.0",
    "web-component-analyzer": "^2.0.0",
    "webpack-merge": "^5.9.0",
    "whatwg-fetch": "^3.6.17",
    "yaml-lint": "^1.7.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 iOS major versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari major versions"
  ],
  "overrides": {
    "wc-sass-render": {
      "sass": "$sass"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "*-css.js",
      "*.css"
    ]
  },
  "scripts": {
    "build": "npm-run-all build:sass sass:render dist:js build:api test bundler postinstall types",
    "build:ci": "npm-run-all sweep build",
    "build:api": "wca analyze 'src/auro-*.js' --outFiles docs/api.md",
    "build:dev:assets": "npm-run-all build:sass:component postCss:component sass:render",
    "build:sass": "npm-run-all build:sass:component postCss:component sass:render",
    "build:sass:component": "sass --no-source-map src:src",
    "build:watch": "nodemon -e scss --watch src --exec npm run build:sass",
    "bundler": "rollup -c",
    "bundle:test": "rollup -c -w",
    "scssLint": "stylelint \"./src/**/*.scss\"",
    "dev": "concurrently --kill-others 'npm run build:watch' 'npm run serve'",
    "dist:js": "copyfiles -u 1 -V './src/**/*.js' ./dist",
    "esLint": "./node_modules/.bin/eslint src/auro-*.js",
    "linters": "npm-run-all scssLint esLint",
    "preCommit": "node scripts/pre-commit.mjs",
    "postCss:component": "node ./scripts/postCss.js",
    "postinstall": "node packageScripts/postinstall.mjs",
    "sass:render": "sass-render src/*.css -t ./scripts/staticStyles-template.js",
    "serve": "web-dev-server --open demo/ --node-resolve --watch",
    "sweep": "rm -rf ./temp ./dist ./src/tokens | rm ./src/*.css ./src/*-css.js",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "prepare": "husky install",
    "types": "tsc"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "web components"
  ]
}
